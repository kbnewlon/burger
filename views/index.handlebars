<div class="container">
  <div class="row">
    <div class="col-sm-12 text-center" id="top-bar">
      <img src="/assets/burger.png" alt="burger" />
      <h1>It's Come To This: A Virtual Burger Shack </h1>

    </div>
    <div class="col-sm-6 text-center" class="task">

      <h2>Current Menu</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devour=true}}
        {{/unless}}
        {{/each}}
      </ul>

      <h2>Burgers You've Eaten</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devour=false}}
        {{/if}}
        {{/each}}
      </ul>
      
    </div>

    <h2>What kind of burger would you like?</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>


      <button type="submit">Order more!</button>
    </form>

  </div>