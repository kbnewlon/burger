<main class="p-3 mb-2 bg-success text-white">

  <section class="row">
    

    <article class="col-sm-12 text-center" id="top-bar">

      <h1>It's Come To This: A Virtual Burger Shack </h1>

    </article>

  </section>

  <section class="row  border-bottom center-section">

    <article class="col-lg-5">

      <h2>Current Menu</h2>

      <ul>

        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devour=true}}
        {{/unless}}
        {{/each}}

      </ul>

    </article>

    <article>

      <img src="../public/assets/images/burger.png" alt="burger">

    </article>

    <article class="col-lg-5">

      <h2>Burgers You've Eaten</h2>

      <ul>

        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devour=false}}
        {{/if}}
        {{/each}}

      </ul>

    </article>

  </section>

  <section class="row  border-bottom center-section">

    <article class="col-lg-12">

      <h2>What kind of burger would you like?</h2>

      <form class="create-form burger-form">


        <div class="form-group">

          <label for="ca">Burger creator: </label>

          <input type="text" id="ca" name="name">

        </div>


        <button type="submit">Order here!!</button>

      </form>

    </article>

  </section>
  
</main>